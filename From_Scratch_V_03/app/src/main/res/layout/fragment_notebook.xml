<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.random.generator.from_scratch_v_03.Notebook"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->
    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="NOTEBOOK" />-->


    <TextView
        android:id="@+id/notebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textSize="24dp"
        android:textStyle="normal"
        android:textColor="#C14040"
        android:text="Notebook" />

    <ImageView
        android:id="@+id/icono_notebook"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/notebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/notebook01" />

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/book"
        android:layout_below="@+id/icono_notebook"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/titulo_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Happy Lemon"
        android:layout_alignTop="@+id/book_cover"
        android:layout_toEndOf="@+id/book_cover"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titulo_story"
        android:layout_below="@+id/titulo_story"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:textColor="#333333"
        android:text="This book cover designed with Canva is all happy feels and zest with its bright blue background, and illustrated cutaway of a lemon!" />


</RelativeLayout>
