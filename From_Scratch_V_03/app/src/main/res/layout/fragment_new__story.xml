<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    tools:context="app.random.generator.from_scratch_v_03.New_Story"
    android:background="#FFFFFF">

    <!-- TODO: Update blank fragment layout -->
    <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="NEW STORY" />-->


    <EditText
        android:id="@+id/titulo_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text=""
        android:hint="Story Name"/>

    <TextView
        android:id="@+id/titulo_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:text="Synopsis"
        android:layout_below="@+id/titulo_story"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/desc_synopsis"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@+id/titulo_synopsis"
        android:layout_alignStart="@+id/titulo_synopsis" />

    <Button
        android:id="@+id/upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload image"
        android:layout_below="@+id/desc_synopsis"
        android:layout_alignStart="@+id/desc_synopsis"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/next_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/upload_image" />


</RelativeLayout>
