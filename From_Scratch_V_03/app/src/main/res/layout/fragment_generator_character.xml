<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.random.generator.from_scratch_v_03.Generator_Character"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />-->

    <TextView
        android:id="@+id/generator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#333333"
        android:hint="Name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/genre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:entries="@array/genre_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#333333"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp" />

    <Spinner
        android:id="@+id/race"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/genre"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:entries="@array/race_spinner"/>

    <Spinner
        android:id="@+id/gender"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/race"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:textColor="#333333"
        android:entries="@array/gender_spinner"/>

    <Button
        android:id="@+id/generate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#00c2c3"
        android:textColor="#ffffff"
        android:text="Generate"
        android:textSize="16dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/genre" />

    <Button
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#00c2c3"
        android:textColor="#ffffff"
        android:text="Save"
        android:textSize="16dp"
        android:layout_marginStart="50dp"
        android:layout_alignBaseline="@+id/generate"
        android:layout_alignBottom="@+id/generate"
        android:layout_toEndOf="@+id/generate" />


</RelativeLayout>
